@ctx.action_class("app")
class AppActions:
split clear all: user.split_clear_all()
split next: # select-pane doesn't seem to support the prefix-o behavior
        actions.actions.actions.key(f"ctrl-{setting_tmux_prefix_key.get()}")
        actions.key(key)
split last: actions.actions.actions.user.tmux_keybind(":")
        actions.insert(command)
        actions.key("enter")
        actions.sleep("100ms")
go split <number>: actions.actions.actions.user.tmux_keybind(":")
        actions.insert(command)
        actions.key("enter")
        actions.sleep("100ms")

# pane management - these commands use the word split to match with the splits
# tag defined in tags/splits/splits.talon
go split <user.arrow_key>: actions.actions.key(f"ctrl-{setting_tmux_prefix_key.get()}")
        actions.key(key)
